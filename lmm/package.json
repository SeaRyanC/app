{
  "name": "lmm",
  "version": "1.0.0",
  "type": "module",
  "description": "Label Mail Merge - Create printable labels from CSV/TSV data",
  "main": "src/index.tsx",
  "scripts": {
    "bundle": "esbuild src/index.tsx --bundle --outfile=../docs/lmm/app.js --minify --sourcemap --jsx=automatic --jsx-import-source=preact --define:process.env.NODE_ENV=\\\"production\\\" --define:process.browser=true --define:global=window --alias:stream=stream-browserify --alias:util=util --alias:buffer=buffer --inject:./src/polyfills.js --loader:.ts=ts --loader:.tsx=tsx",
    "check": "tsc --noEmit",
    "lint": "eslint src/",
    "dev": "esbuild src/index.tsx --bundle --outfile=../docs/lmm/app.js --sourcemap --watch --jsx=automatic --jsx-import-source=preact --define:process.env.NODE_ENV=\\\"development\\\" --define:process.browser=true --define:global=window --alias:stream=stream-browserify --alias:util=util --alias:buffer=buffer --inject:./src/polyfills.js --loader:.ts=ts --loader:.tsx=tsx"
  },
  "keywords": [
    "labels",
    "mail-merge",
    "pdf",
    "avery"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "blob-stream": "^0.1.3",
    "buffer": "^6.0.3",
    "events": "^3.3.0",
    "marked": "^17.0.1",
    "pdfkit-browserify": "^0.8.3-R2",
    "preact": "^10.28.2",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^25.0.3",
    "@types/pdfkit": "^0.17.4",
    "esbuild": "^0.27.2",
    "eslint": "^9.27.0",
    "pdfkit": "^0.17.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.32.1"
  }
}
